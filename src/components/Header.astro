---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<div class="gif-container">
  <img src="/zurraheader.gif" alt="Centered GIF" class="centered-gif" />
  <nav>
    <!-- Dropdown Button -->
    <button class="dropdown-button" id="dropdownButton">&#9776;</button>
    
    <!-- Navigation links (hidden by default on smaller screens) -->
    <div class="internal-links" id="navLinks">
      <HeaderLink href="/">About</HeaderLink>
      <HeaderLink href="/blog">Works</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="mailto:azzurraseabunny@gmail.com">Contact</HeaderLink>
    </div>
  </nav>
  <div class="placeholder-box"></div>
</div>
<script>
  // JavaScript to toggle the dropdown menu visibility
  const dropdownButton = document.getElementById('dropdownButton');
  const navLinks = document.getElementById('navLinks');

  dropdownButton.addEventListener('click', () => {
    navLinks.classList.toggle('dropdown-menu-active');
  });
</script>

<style>
/* Centering the GIF container */
.gif-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 11vh; /* Adjust height to take up a smaller portion of the viewport height */
  width: 100%;
  padding: 20px;
  box-sizing: border-box; /* Ensure padding doesn't overflow */
}

.gif-container img {
  transform: scale(0.22) translateX(-180%);
}

/* Placeholder Box */
.placeholder-box {
  position: absolute;
  width: 100%;
  height: 104%;
  background-color: #26211e;
  z-index: 1;
}

/* Responsive GIF Styling */
.centered-gif {
  width: 100%; /* Ensures the GIF is responsive */
  height: auto;
  max-width: 100%;
  position: relative;
  z-index: 2; /* Keeps the GIF above the placeholder */
  transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
}

/* Hover effects */
.centered-gif:hover {
  filter: brightness(1.2);
}

/* Position the nav container to be in front of the GIF and center the buttons vertically */
nav {
  position: absolute;
  top: 34%; /* Center vertically */
  right: 2%;
  z-index: 3; /* Ensure the nav is above the GIF */
  display: flex;
  justify-content: center; /* Center the buttons horizontally */
  align-items: center; /* Center the buttons vertically */
  transform: transformX(40%); /* Adjust for exact centering */
  padding: 0;
  margin: 0;
}

/* Styling for the internal links */
.internal-links {
  list-style: none;
  display: flex; /* Arrange buttons horizontally */
  padding: 0;
  margin: 0;
}

.internal-links a {
  padding: 0.25em 0.5em; /* Further reduced padding for even smaller buttons */
  color: white;
  background-color: #db3f23; /* Orange background for the buttons */
  border-radius: 5px;
  text-decoration: none;
  display: block;
  font-size: 0.7em; /* Smaller font size */
  transition: background-color 0.3s, transform 0.3s ease-in-out; /* Add transition for scaling */
  font-size: calc(0.7em + 0.3vw); /* Makes the font-size scale with the viewport width */
  padding: calc(0.2em - 0.3vw) calc(0.5em + 0.6vw); /* Adjust padding to scale with screen */
  margin: 0 10px;
box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
}

/* Hover effect: Grow the button */
.internal-links a:hover {
  background-color: gray; /* Change background to gray on hover */
  transform: scale(1.05); /* Scale the button to 110% of its original size */
}

/* Styling for the dropdown button */
.dropdown-button {
  visibility: hidden;
}

/* Hide the internal links by default on smaller screens */
@media (max-width: 768px) {
  .gif-container {
  position: fixed; /* Fixes the position */
  z-index: 10;
  }
  
  .gif-container img{
  transform: scale(0.5);
  }
  
  .internal-links {
    display: none; /* Hide the links by default */
    position: absolute;
    top: 50px; /* Position the dropdown menu */
    left: 0;
    width: 100%;
	background-color: rgba(0, 0, 0, 0);
    text-align: center;
  }
  
  .dropdown-button {
  visibility: visible;
  background-color: rgba(0, 0, 0, 0);
  color: white;
  padding: 10px;
  font-size: 2.2em;
  border: none;
  cursor: pointer;
  transform: translateY(-30%);
}
  
  .internal-links{
  transform: translateX(-70%) translateY(10%);
  min-width: 150px;
  border-radius: 6px;  /* Rounded corners for the buttons */
  }
  .internal-links a {
    font-size: 0.6em;
	min-height: 20px;
    padding: 0.6em 0.5em;
    margin: 7px 0;  /* Space between buttons */
  }

  /* Show the internal links when the dropdown button is clicked */
  .dropdown-menu-active {
    display: block;
  }
}

</style>
