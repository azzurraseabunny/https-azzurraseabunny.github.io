<style>
/* Basic Page Layout */
html, body {
    height: 100%; /* Ensure the body and html take the full height of the viewport */
    margin: 0; /* Remove default margin */
    display: flex;
    flex-direction: column;
}

/* Footer container styling */
.footer-container {
    position: relative;
    padding: 20px;
    text-align: center;
    background-color: #26211e;
    color: var(--color-main);
    z-index: -1; /* Move the footer behind all other elements */
    margin-top: 50px; /* Lower the footer by adding top margin */
    flex-shrink: 0; /* Prevent the footer from shrinking */
}

/* Centering the GIF container */
.gif-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: auto;
    max-width: 100%;
    padding: 0px;
}

.astro-gif {
    position: absolute; /* Makes the element scroll with the page */
    height: auto;
    max-width: 6%;
    left: 0vw; /* Adjust horizontal placement */
    top: 4vh; /* Adjust vertical placement */
    transform: translateY(-50%); /* Centers the element vertically */
    z-index: 2; /* Keeps it above other elements */
}

/* Placeholder Box */
.placeholder-box {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: #26211e;
    z-index: 1;
}

/* Image styling */
.centered-gif {
    width: 70%;
    max-width: 100%;
    height: auto;
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease-in-out, filter 0.3s ease-in-out;
}

.centered-gif:hover {
    filter: brightness(1.2);
}

/* Ensuring the footer sticks to the bottom */
body {
    display: flex;
    flex-direction: column;
    min-height: 100vh; /* Ensures the body takes full height of the viewport */
}

main {
    flex-grow: 1; /* Allows the content to take up remaining space */
}

/* Scroll-to-Top Button Styles */
.scroll-to-top-btn {
    position: fixed;
    bottom: 20px; /* Always visible, at the bottom of the screen */
    right: 40px;
    background-color: #db3f23;
    color: white;
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    font-size: 24px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease, transform 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55); /* BackOut effect */
    z-index: 10; /* Ensure it stays above the footer */
    transform: translateY(100px); /* Start off the screen (below) */
}

/* Scroll-to-Top Button Hover Effects */
.scroll-to-top-btn:hover {
    background-color: gray;
}

.scroll-to-top-btn:focus {
    outline: none;
}

</style>

<script>
    // Get the button
    const scrollToTopBtn = document.getElementById('scrollToTopBtn');

    // Initially hide the button off the screen
    scrollToTopBtn.style.transform = 'translateY(100px)'; // Below the screen by 100px

    // Show the button when scrolled down 200px from the top
    window.onscroll = function() {
        if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
            scrollToTopBtn.style.transform = 'translateY(0px)'; // Slide up into view with BackOut effect
        } else {
            scrollToTopBtn.style.transform = 'translateY(100px)'; // Slide back down (hidden)
        }
    };

    // Scroll to top when button is clicked
    scrollToTopBtn.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
</script>
