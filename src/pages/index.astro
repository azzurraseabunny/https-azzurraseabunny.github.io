---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import CardFeature from '../components/CardFeature.astro';  // Import the card feature
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Image Container Styling */
      .portfolio-container img {
        display: block;
        margin: 0 auto;
        margin-bottom: 0px;
        margin-top: 25px;
        width: 500px;
        height: auto;
      }

      /* Basic Reset */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        justify-content: space-between;
        align-items: center;
      }

      header {
        background-color: #333;
        color: white;
        padding: 1rem;
        text-align: center;
        width: 100%;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex-grow: 1;
        padding: 20px;
        width: 100%;
      }

      .about-container {
        display: flex;
        gap: 20px;
        justify-content: center;
        align-items: center;
        margin-bottom: 40px;
        width: 80%;
      }

      .text-container {
        font-size: 1.1em;
        max-width: 60%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: auto;
      }

      .image-container img {
        width: 100%;
        height: auto;
        max-height: 250px;
        border-radius: 8px;
      }

      .lower-container {
        font-size: 1em;
        color: white;
        padding: 1em;
        background-color: #333;
        margin-bottom: 40px;
        width: 80%;
        text-align: center;
        border-radius: 15px;
      }

      /* Card Row Styling */
      .card-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        width: 30%;
        margin-bottom: 30px;
        flex-wrap: wrap;
        position: relative;
      }

      .card {
        background: #333;
        padding: 15px;
        text-align: center;
        width: 100%;
        min-width: 250px;
        flex: 1 1 auto;
        display: none;
        border-radius: 15px;
        overflow: hidden;
        opacity: 0;
        transition: opacity 0.5s ease;
      }

      .card.active {
        display: block;
        opacity: 1;
      }

      .card h3 {
        font-size: 1.2em;
        margin-bottom: 10px;
        color: white;
      }

      .card p {
        font-size: 1em;
        color: white;
      }

      /* Arrow buttons styling */
      .arrow-button {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 50%;
        font-size: 1.5em;
        z-index: 5;
        position: absolute;
        top: 50%;
        transform: translateY(-0%);
      }

      .arrow-container {
        width: 100%;
        display: flex;
        justify-content: space-between;
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%);
        z-index: 10;
      }

      .left-arrow {
        left: -65px; /* Move left arrow outside */
      }

      .right-arrow {
        right: -65px; /* Move right arrow outside */
      }

      footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 1rem;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <Header />
    <div class="portfolio-container">
      <img src="/title/about.gif" alt="Description of image" />
    </div>
    <main>
      <div class="about-container">
        <div class="image-container">
          <img src="/abouts.gif" alt="Description of image" />
        </div>
        <div class="text-container">
          <p>
            Hi! I'm Rohn Maulawin, but you can call me Zurra, I'm a 17-year-old student studying at CIIT Senior High School.<br><br>
            Iâ€™m passionate about crafting and bringing ideas to life through thoughtful planning and creativity!
          </p>
        </div>
      </div>
      <div class="lower-container">
        <p>
          I'm creative and a multi-talented animator, illustrator, and storyteller with a strong background in character design, story development, and music production.<br><br>
          I'm also experienced in working on both independent and collaborative projects, drawing inspiration from renowned animation studios, films, and popular media.
        </p>
      </div>

      <!-- Card Rows Section -->
      <div class="card-row">
        <div class="card active" id="card1">
          <h3>Hard Skills</h3>
          Expert :<br>
          2D Animation<br>
          Storyboard & Compositing<br>
          Character Design<br>
          Concept Art<br>
          Sound Design<br>
          Character Animation<br>
          Art<br>
          Music Composition<br><br>
          Proficient :<br>
          Graphic Design<br>
          Motion Graphics<br>
          Music Production<br>
          3D Modelling<br><br>
          Novice :<br>
          Game Programming<br>
          Website Programming
        </div>
        <div class="card" id="card2">
          <h3>Soft Skills</h3>
          Strong work ethic<br>
          Communication<br>
          Adaptability<br>
          Emotional Intelligence<br>
          Creativity<br>
          Ability to work under pressure<br>
          Conflict Resolution<br>
          Problem Solving<br>
          Responsibility<br>
          Self-Motivation<br>
          Leadership<br>
          Determined<br>
        </div>
        <!-- Arrow Buttons beside the cards for Card 1 -->
        <div class="arrow-container">
          <button class="arrow-button left-arrow" id="prevBtn1">&#8592;</button>
          <button class="arrow-button right-arrow" id="nextBtn1">&#8594;</button>
        </div>
      </div>
      <div class="card-row">
        <div class="card active" id="card3">
          <h3>Programs I use</h3>
          Adobe Animate<br>
          Toon Boom<br>
          Clip Studio Paint<br>
          FL Studio<br>
		  Blender<br>
		  Blockbench<br>
        </div>
        <div class="card" id="card4">
          <h3>Hobbies</h3>
          Drawing<br>
          Music Production<br>
          Storytelling<br>
          Gaming<br>
          Animation<br>
        </div>
        <!-- Arrow Buttons beside the cards for Card 2 -->
        <div class="arrow-container">
          <button class="arrow-button left-arrow" id="prevBtn2">&#8592;</button>
          <button class="arrow-button right-arrow" id="nextBtn2">&#8594;</button>
        </div>
      </div>
    </main>
    <Footer />

    <script>
      const cards1 = document.querySelectorAll('#card1, #card2');
      const cards2 = document.querySelectorAll('#card3, #card4');
      let currentIndex1 = 0;
      let currentIndex2 = 0;

      function showNextCard1() {
        cards1[currentIndex1].classList.remove('active');
        currentIndex1 = (currentIndex1 + 1) % cards1.length;
        cards1[currentIndex1].classList.add('active');
      }

      function showPrevCard1() {
        cards1[currentIndex1].classList.remove('active');
        currentIndex1 = (currentIndex1 - 1 + cards1.length) % cards1.length;
        cards1[currentIndex1].classList.add('active');
      }

      function showNextCard2() {
        cards2[currentIndex2].classList.remove('active');
        currentIndex2 = (currentIndex2 + 1) % cards2.length;
        cards2[currentIndex2].classList.add('active');
      }

      function showPrevCard2() {
        cards2[currentIndex2].classList.remove('active');
        currentIndex2 = (currentIndex2 - 1 + cards2.length) % cards2.length;
        cards2[currentIndex2].classList.add('active');
      }

      document.getElementById('nextBtn1').addEventListener('click', showNextCard1);
      document.getElementById('prevBtn1').addEventListener('click', showPrevCard1);
      document.getElementById('nextBtn2').addEventListener('click', showNextCard2);
      document.getElementById('prevBtn2').addEventListener('click', showPrevCard2);
    </script>
  </body>
</html>
