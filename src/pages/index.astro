---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Flexbox Layout for image and text container */
:root {
  --about-container-translate-y: 50%; /* Base vertical translation for about-container */
}

.about-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 20px;
  transform: translateY(var(--about-container-translate-y) - 40) translateX(0%);
}

.text-container {
  flex-grow: 1; /* Allow the text to grow if needed */
  font-size: 1.1em;
  color: rgb(var(--white));
  max-width: 60%;
  display: flex; /* Enable flexbox for alignment */
  flex-direction: column; /* Stack the text vertically */
  justify-content: center; /* Center the text vertically within the container */
  height: auto; /* Let the height adjust to content */
}

.image-container img {
  width: 100%; /* Responsive width for the image */
  height: auto; /* Ensure the aspect ratio is maintained */
  border-radius: 8px; /* Optional for rounded corners */
  max-height: 200px; /* Limit max height if necessary */
}

.image-container {
  display: flex;
  align-items: center; /* Align the image container's contents */
  height: auto; /* Adjust based on the GIF */
}

.lower-container {
  transform: translateY(calc(var(--about-container-translate-y) - 110px)); /* Adjust relative to about-container */
  font-size: 1em;
  color: white;
  padding: 1em;
}

/* Adjust responsiveness */
@media (max-width: 720px) {
  :root {
    --about-container-translate-y: 00%; /* Change the translation value for smaller screens */
  }

  .lower-container {
    transform: translateY(calc(var(--about-container-translate-y) + 10px));
  }
}
/* Image Container Styling */
      .abouting-container img {
	    width: 30%; /* or a specific value like 500px */
		height: auto; /* to maintain the aspect ratio */
        display: block;
        margin: 0 auto;
        margin-bottom: -30px;
        margin-top: -10px;
		transform: translateY(10%)
      }
}
    </style>
  </head>
  <body>
    <Header />
	<div class="abouting-container">
      <img src="/title/about.gif" alt="Description of image" />
    </div>
    <main>
      <div class="about-container">
		  <div class="image-container">
			<img src="/abouts.gif" alt="Description of image" />
		  </div>
		  <div class="text-container">
			<p>
			  Hi! I'm Rohn Maulawin, but you can call me Zurra. I'm a 17-year-old student studying at CIIT Senior High School.
			</p>
		  </div>
		</div>
		<div class="lower-container">
		  <p>
			I'm creative and a multi-talented animator, illustrator, and storyteller with a strong background in character design, story development, and music production.
		  </p>
		  <p>
			I'm also experienced in working on both independent and collaborative projects, drawing inspiration from renowned animation studios, films, and popular media.
		  </p>
		</div>
	</main>
    <Footer />
  </body>
</html>
