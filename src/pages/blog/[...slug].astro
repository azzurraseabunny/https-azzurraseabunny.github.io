---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>

<style>
/* Global Text and Image Sizing */
body {
    font-size: 14px; /* Smaller font size for all text */
}

h1, h2, h3, h4, h5, h6 {
    font-size: calc(1em - 0.3rem); /* Make all headings a bit smaller */
}

p {
    font-size: 0.9em; /* Smaller paragraphs */
}

img {
    max-width: 80%; /* Make images smaller */
    height: auto;
    border-radius: 6px;
}

/* Adjust blog post specific text and images */
.blog-post-content {
    font-size: 0.85rem; /* Smaller font size for blog post content */
}

.blog-post-content img {
    max-width: 70%; /* Smaller images in blog posts */
}

/* Adjust the header image specifically */
.blog-post-header img {
    max-width: 60%; /* Make the header image smaller */
    height: auto;
    border-radius: 6px;
}

/* Optional: Adjusting code and blockquotes */
code {
    font-size: 0.85rem; /* Smaller code snippets */
}

pre {
    font-size: 0.85rem; /* Smaller preformatted text */
}

blockquote {
    font-size: 0.9rem; /* Slightly smaller blockquote text */
}

