---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
		<h1>Projects</h1>
			<p>
			These are the projects that im currently a part of!
			</p>

			<!-- Vertical Panels Section -->
			
			
			
			
			<div class="panels-container">
				<a href="/projects/rainworldmc" class="panel">
					<div class="panel-image">
						<img src="/project/10-10-cool.png" alt="Rain World MC">
					</div>
					<div class="panel-content">
						<p>Rainworld MC</p>
					</div>
				</a>

				<a href="/projects/iteratorfunkin" class="panel">
					<div class="panel-image">
						<img src="/portfolio/illustration/ancientbg.png" alt="Iterator Funkin">
					</div>
					<div class="panel-content">
						<p>Iterator Funkin</p>
					</div>
				</a>
				<!-- Add more panels below -->
				
				
				
				
			</div>
		</main>
		<Footer />
	</body>
</html>



<style>
.panels-container {
	display: flex;
	flex-direction: column;
	gap: 2rem;
	margin: 2rem 0;
}

.panel {
	display: flex;
	align-items: stretch;
	border: 1px solid #ccc;
	height: 300px;
	overflow: hidden;
	border-radius: 15px; /* Rounded corners */
	transition: transform 0.3s ease, box-shadow 0.3s ease;
	background-color: #fff; /* Clean background */
	text-decoration: none; /* Remove link underline */
	color: inherit; /* Inherit text color */

}

/* Hover effect: Slight grow and shadow */
.panel:hover {
	transform: scale(1.004); /* Slight growth */
	box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Soft shadow */
}

/* Default alignment (image on the left) */
.panel-image {
	flex: 0 0 65%;
	height: 100%;
	overflow: hidden;
	border-radius: 15px 0 0 15px; /* Rounded corners for image */
}

.panel-image img {
	width: 100%;
	height: 100%;
	object-fit: cover;
	transition: transform 0.3s ease; /* Smooth zoom-in on hover */
}

.panel:hover .panel-image img {
	transform: scale(1.01); /* Slight zoom on image */
}

.panel-content {
	flex: 1;
	padding: 1rem;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	background-color: #f9f9f9;
	border-radius: 0 15px 15px 0; /* Rounded corners for content */
}

/* Alternate alignment for even panels (image on the right) */
.panel:nth-child(even) {
	flex-direction: row-reverse;
}

.panel-content p {
	margin: 0;
	font-size: 1rem;
	color: #333;
	line-height: 1.5;
}
</style>